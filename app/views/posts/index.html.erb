<h1>All Posts</h1>
 <div id= "table">

    
    
 
  <% @posts.each do |post| %>
    
      <div id="title"><h3>Title: </h3><p><%= post.title.capitalize %></p></div>
      <p><%= post.text %></p>
      <div id="post-links"><p><%= link_to 'Show', post %></p>
      <p><%= link_to 'Edit', edit_post_path(post) %></p>
      <p><%= link_to 'Destroy', post_path(post),
                       method: :delete, data: {confirm: "Are you sure you want to delete this post?"}
       %></p>
       </div>
  <% end %>


</div>

<p><%= link_to 'New Post', new_post_path %></p>

